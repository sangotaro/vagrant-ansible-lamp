# phpMemcachedAdmin - Graphic stand-alone administration for memcached to monitor and debug purpose
# 
# Allows only localhost by default

Alias /phpMemcachedAdmin /usr/share/phpMemcachedAdmin
Alias /phpmemcachedadmin /usr/share/phpMemcachedAdmin

<Directory /usr/share/phpMemcachedAdmin/>
  <IfModule mod_authz_core.c>
    # Apache 2.4
    <RequireAny>
      Require local
    </RequireAny>
  </IfModule>
  <IfModule !mod_authz_core.c>
    # Apache 2.2
    Order Deny,Allow
    Deny from All
    Allow from 127.0.0.1
    Allow from 192.168.33.1
    Allow from ::1
  </IfModule>
</Directory>
